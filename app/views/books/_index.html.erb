<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>image</th>
      <th>Title</th>
      <th>Opinion</th>
      <th>category</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td>
          <% book.categories.each do |category| %>
            <li style="list-style: none;"><%= link_to category.name,
            search_path(content: category.name, model:"category", method: "perfect") %></li>
          <% end %>
        </td>
        <td class=<%= "favorite-" + book.id.to_s %> >
            <%= render "favorites/btn", book: book %>
        </td>
         <td class="book-comments-counter">
            <%= render "book_comments/counter", book: book %>
          </td>
          <td>
           <%= render "books/rest_star", book: book %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>